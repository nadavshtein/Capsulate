<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageManager">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation" />

        <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
            android:layout_gravity="bottom"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:elevation="8dp"
            android:padding="25dp"
            app:bnc_mode="spread">

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/c_item_rest1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bt_active="true"
                app:bt_colorActive="@color/search_active"
                app:bt_colorInactive="@color/search_inactive"
                app:bt_icon="@drawable/ic_baseline_date_range_24"
                app:bt_padding="10dp"
                app:bt_shape="@color/AliceBlue"
                app:bt_title="@string/capsules"
                app:bt_titlePadding="0dp" />

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/c_item_rest2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bt_active="true"
                app:bt_colorActive="@color/search_active"
                app:bt_colorInactive="@color/search_inactive"
                app:bt_icon="@drawable/ic_baseline_add_24"
                app:bt_padding="10dp"
                app:bt_shape="@color/AliceBlue"
                app:bt_title="@string/capsules"
                app:bt_titlePadding="0dp" />

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/c_item_rest3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bt_active="true"
                app:bt_colorActive="@color/search_active"
                app:bt_colorInactive="@color/search_inactive"
                app:bt_icon="@drawable/ic_baseline_date_range_24"
                app:bt_padding="10dp"
                app:bt_shape="@color/AliceBlue"
                app:bt_title="@string/capsules"
                app:bt_titlePadding="0dp" />
        </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>


</RelativeLayout>